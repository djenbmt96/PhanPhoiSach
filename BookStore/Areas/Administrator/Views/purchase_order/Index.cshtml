@model IEnumerable<BookStore.Models.purchase_order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.purchase_order_created_at)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchase_order_total_money)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchase_order_status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplier.supplier_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_order_created_at)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_order_total_money)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purchase_order_status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplier.supplier_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.purchase_order_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.purchase_order_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.purchase_order_id })
        </td>
    </tr>
}

</table>
