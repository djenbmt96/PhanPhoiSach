@model IEnumerable<BookStore.Models.book>

@{
    ViewBag.Title = "Sách";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><a href="javascript:void(0);" class="toggle-sidebar"><span class="fa fa-angle-double-left" data-toggle="offcanvas" title="Maximize Panel"></span></a>Sách</h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Index","books",FormMethod.Get))
            {
                <p>
                    Tên sách: @Html.TextBox("searchString") <br />
                    <input type="submit" value="Tìm" />
                </p>
            }
        </div>

        <div class="col-md-offset-9">
            @Html.ActionLink("Thêm mới", "Create")
        </div>
    </div>
    <div class="panel-body">
        <div class="content-row">
            <h2 class="content-row-title">Danh sách sản phẩm</h2>
        </div>
        <div class="content-row">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.book_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.book_seling_price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.book_purchase_price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.supplier.supplier_name)
                        </th>
                        <th>
                            Thao tác
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.book_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.book_seling_price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.book_purchase_price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.supplier.supplier_name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.book_id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.book_id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.book_id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>