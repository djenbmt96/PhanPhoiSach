<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="shortcut icon" href="~/Areas/Administrator/Content/favicon_16.ico" />
    <link rel="bookmark" href="~/Areas/Administrator/Content/favicon_16.ico" />
    <!-- site css -->
    <link rel="stylesheet" href="~/Areas/Administrator/Content/dist/css/site.min.css">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,800,700,400italic,600italic,700italic,800italic,300italic" rel="stylesheet" type="text/css">
    <!-- <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'> -->
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript" src="~/Areas/Administrator/Content/dist/js/site.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>
<body>
    <nav role="navigation" class="navbar navbar-custom">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header" >
            <button data-target="#bs-content-row-navbar-collapse-5" data-toggle="collapse" class="navbar-toggle" type="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">Xin Chào Admin</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div id="bs-content-row-navbar-collapse-5" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="getting-started.html">Đăng xuất</a></li>
            </ul>

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
    </nav>

    <div class="container-fluid">
    <!--documents-->
    <div class="row row-offcanvas row-offcanvas-left">
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" role="navigation">
            <ul class="list-group panel">
                <li class="list-group-item"><i class="glyphicon glyphicon-align-justify"></i> <b>CÔNG CỤ</b></li>
                <li class="list-group-item"><input type="text" class="form-control search-query" placeholder="Search Something"></li>
                <li>
                    <a href="#sach" class="list-group-item " data-toggle="collapse"><i class="glyphicon glyphicon-book"></i>Sách<span class="glyphicon glyphicon-chevron-right"></span></a>
                    <div class="collapse" id="sach">
                        <a href="@Url.Action("Create","books")" class="list-group-item">Thêm mới</a>
                        <a href="@Url.Action("Index","books")" class="list-group-item">Xem danh sách</a>
                    </div>
                </li>
                <li>
                    <a href="#nhaxuatban" class="list-group-item " data-toggle="collapse"><i class="glyphicon glyphicon-tree-deciduous"></i>Nhà xuất bản<span class="glyphicon glyphicon-chevron-right"></span></a>
                    <div class="collapse" id="nhaxuatban">
                        <a href="@Url.Action("Create","suppliers")" class="list-group-item">Thêm mới</a>
                        <a href="@Url.Action("Index","suppliers")" class="list-group-item">Xem danh sách</a>
                    </div>
                </li>
                <li>
                    <a href="#daily" class="list-group-item " data-toggle="collapse"><i class="glyphicon glyphicon-compressed"></i>Đại lý<span class="glyphicon glyphicon-chevron-right"></span></a>
                    <div class="collapse" id="daily">
                        <a href="@Url.Action("Create","agencies")" class="list-group-item">Thêm mới</a>
                        <a href="@Url.Action("Index","agencies")" class="list-group-item">Xem danh sách</a>
                    </div>
                </li>
                <li>
                    <a href="#phieuxuat" class="list-group-item " data-toggle="collapse"><i class="glyphicon glyphicon-list-alt"></i>Phiếu xuất<span class="glyphicon glyphicon-chevron-right"></span></a>
                    <div class="collapse" id="phieuxuat">
                        <a href="@Url.Action("Create","sale_order")" class="list-group-item">Thêm mới</a>
                        <a href="@Url.Action("Index","sale_order")" class="list-group-item">Xem danh sách</a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="col-xs-12 col-sm-9 content">
            @RenderBody()
        </div><!-- content -->
    </div>
    </div>
</body>
</html>